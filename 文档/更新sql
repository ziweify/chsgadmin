#向用户表x_user添加version
ALTER TABLE x_user ADD COLUMN version INT DEFAULT 1 COMMENT '版本号';·
ALTER TABLE x_config ADD COLUMN mem_url varchar(50) DEFAULT '' COMMENT '会员端url';
ALTER TABLE x_config ADD COLUMN open_register tinyint DEFAULT 1 COMMENT '是否开放会员';
ALTER TABLE x_config ADD COLUMN autodelchsgtime tinyint DEFAULT 7 COMMENT '保留聊天记录天数';
ALTER TABLE x_gamemsg ADD COLUMN ifok tinyint DEFAULT 1 COMMENT '是否启用 1：是 0：否';
ALTER TABLE x_userroom ADD COLUMN auth_outbet_ip Varchar(20) DEFAULT '' COMMENT '授权飞单服务器ip';
ALTER TABLE x_outbet_site ADD COLUMN auth_outbet_ip Varchar(20) DEFAULT '' COMMENT '授权飞单服务器ip';
ALTER TABLE x_outbet_site ADD COLUMN online tinyint DEFAULT 0 COMMENT '在线状态 1：在线 0：离线';
ALTER TABLE x_outbet_site ADD COLUMN cookie Varchar(5000) DEFAULT '' COMMENT 'cookie';
ALTER TABLE x_outbet_site ADD COLUMN curl Varchar(200) DEFAULT '' COMMENT 'curl';
ALTER TABLE x_outbet_site ADD COLUMN bz Varchar(200) DEFAULT '' COMMENT '备注';
ALTER TABLE x_outbet_site ADD COLUMN sg_secretkey Varchar(100) DEFAULT '' COMMENT 'secretkey';
ALTER TABLE x_outbet_site ADD COLUMN sg_kid Varchar(100) DEFAULT '' COMMENT 'kid';
ALTER TABLE x_outbet_site ADD COLUMN errors INT default 0 COMMENT '错误次数';
ALTER TABLE x_outbet_site ADD COLUMN updatetime INT default 0 COMMENT '更新时间';
alter table x_game add column fenduan INT default 8 comment '飞单分段';
alter table x_outbet_site add column proxy_ip varchar(50) default '' comment '代理ip';
alter table x_config add column proxy_url varchar(200) default '' comment '代理url';
